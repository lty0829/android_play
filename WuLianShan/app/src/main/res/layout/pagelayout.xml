<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/search01"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <com.example.administrator.wulianshan.MyScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/touview"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/touview"
                    />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/search02"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <SearchView
                    android:id="@+id/find"
                    android:imeOptions="actionSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/luotuo"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/luotuo"
                android:layout_marginBottom="10dp"
                    />
                <TextView

                    android:id="@+id/watch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/textselector"
                    android:clickable="true"/>
            </RelativeLayout>
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/mapname1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/map1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/map1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_below="@+id/map1"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="五莲山"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/map2"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/map2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_below="@+id/map2"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="九仙山"/>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_below="@+id/luotuo"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/mapname2"/>
            <com.example.administrator.wulianshan.MyHorizontalScrollView
                android:id="@+id/id_horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/id_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </com.example.administrator.wulianshan.MyHorizontalScrollView>

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
            <com.example.administrator.wulianshan.MyHorizontalScrollView
                android:id="@+id/id_horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/id_gallery1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </com.example.administrator.wulianshan.MyHorizontalScrollView>

            <LinearLayout
                android:id="@+id/viewGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/gongluo"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray"/>

            <RelativeLayout
                android:id="@+id/rlayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/mapname3"/>
            </RelativeLayout>

            <GridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:numColumns="3">
            </GridView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

    </com.example.administrator.wulianshan.MyScrollView>
</LinearLayout>