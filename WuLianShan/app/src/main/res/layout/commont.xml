<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_head_view"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_alignTop="@+id/user_head_view"
            android:layout_toRightOf="@+id/user_head_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="昵称"/>
        <TextView
            android:id="@+id/user_phone"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/user_name"
            android:layout_toRightOf="@+id/user_head_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华为male"
            />
        <Button
            android:id="@+id/user_look"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/button1"
            android:layout_centerVertical="true"
            android:text="关注"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_below="@id/user_head_view"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/user_commont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   美不胜收，不虚此行"/>
    <GridView
        android:id="@+id/user_grid"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:gravity="center_horizontal"
        android:numColumns="3">

    </GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/user_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ToggleButton
            android:id="@+id/user_tog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>
    <EditText
        android:id="@+id/user_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/newedit"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"/>

</LinearLayout>